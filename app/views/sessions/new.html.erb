    <h1>Sign in</h1>

    <%= form_for(:session, :url => sessions_path, html: {class: "well"}) do |f| %>
      <div class="field">
        <%= f.label :email, "Email address" %><br />
        <%= f.text_field :email, class:"form-control"%>
      </div>
      </br>
      <div class="field">
        <%= f.label :password, "Password" %><br />
        <%= f.password_field :password, class:"form-control" %>
      </div>
      </br>
      <div class="actions">
        <%= f.submit "Sign in", class:"btn btn-large btn-primary" %>
      </div>
    <% end %>

    <p><%= link_to "Not signed up yet? Sign up now!", signup_path, class: "btn btn-block btn-large btn-primary" %></p>
