<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path, html: {class: "well"}) do |f| %>
  <div class="field">
    <%= f.label :email, "Email address" %><br />
    <%= f.text_field :email, class:"form-control"%>
  </div>
  </br>
  <div class="field">
    <%= f.label :password, "Password" %><br />
    <%= f.password_field :password, class:"form-control" %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Sign in", class:"btn btn-primary" %>
  </div>
<% end %>

<p>Not signed up yet? <%= link_to "Sign up!", signup_path %></p>