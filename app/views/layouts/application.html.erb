<!DOCTYPE html>
<html>
<head>
  <title>Challenge: deliberative polls</title>

  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>

</head>


<body>
  
  <header>
  <%= render "layouts/menu" %>
  </header>
  
  <div class="container">
    <div class="row">
    <div class="col-md-8 col-md-offset-2">
    
      <!--flash hash -->
      <% flash.each do |key, value| %>
        <div class="alert alert-info"> <%= value %>  </div>
      <% end %>


      <%= yield %>
    </div>
    </div>
  </div>

</body>
</html>
