<!-- Show answer's results -->

<% if show_history %>
	<% answer_nb_responders = answer.responders_history.count %>
<% else %>
	<% answer_nb_responders = answer.responders.count %>
<% end %>

<% if answer_nb_responders > 0 %>
	<% answer_percentage = ((answer_nb_responders.fdiv(@participants.count)) * 100 * 10).round.to_f / 10 %>
<% else %>
	<% answer_percentage = 0 %>
<% end %>

<div class="row">
	<h4 class="poll_show_answer_content col-md-4 col-md-offset-1"><%= answer.content %></h4>

	<div class="poll_show_progress_bar col-md-6">
		<div class="progress progress-striped">
		  <div class="progress-bar"  role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: <%= answer_percentage %>%">
		    <%= answer_percentage %>%
		  </div>
		  <% if answer_nb_responders == 0 %>
		  	<p style="text-align:center">0%</p>
		  <% end %>
		</div>
	</div>
</div>