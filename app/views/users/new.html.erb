    <h1>Sign up</h1>

    <%= form_for(@user, html: {class: "well"}) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= error_messages @user %>

        <div class="field">
          <%= f.label :first_name, "First name" %>
          <%= f.text_field :first_name , class:"form-control"%>
        </div>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control"%>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email , class:"form-control"%>
        </div>

        <div class="field">
          <%= f.label :influence %>
          <%= f.range_field :influence, class:"form-control", in: 0..100, step: 1 %>
        </div>

        <div class="field">
          <%= f.label :password, "Password (minimum 8 characters)" %>
          <%= f.password_field :password , class:"form-control"%>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation , class:"form-control"%>
        </div>
        <br />
        <div class="actions">
          <%= f.submit "Create my account", class:"btn btn-block btn-large btn-primary"  %>
        </div>
    <% end %>


