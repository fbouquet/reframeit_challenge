	<h1>Users list</h1>

<p>These are the users created until now.</p>

<%= will_paginate %>

<% @users.each do |user|%>

<div class="well">
	<h2> <%= user.first_name %> <%= user.name %></h2>
	<%= link_to "View profile",  user_path(user), class: "btn btn-medium btn-info" %>
	<% if signed_in? %>
		<div class="pull-right">
			<%= link_to "Edit profile", edit_user_path(user), class: "btn btn-medium btn-info" %>
			<%= link_to "Delete user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete " + user.first_name + " " + user.name + "?" }, class: "btn btn-medium btn-danger" %>
		</div>
	<% end %>
</div>

<%end %>

<%= will_paginate %>